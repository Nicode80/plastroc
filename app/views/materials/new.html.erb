<div class="home-banner mb-4" style="background-image: url(<%= image_path('leaf-illus.png') %>);">
  <div class="container">
    <h3 class="text-center py-4">Nouveau Mat√©riau</h3>
  </div>
</div>

<div class="container">
  <div class="col-12 col-md-6 offset-md-3">
    <%= simple_form_for(@material) do |f| %>
    <p>Selectionner une cat√©gorie</p>
      <%= f.input :category,
              label: false,
              as: :radio_buttons,
              collection_wrapper_tag: 'div',
              collection_wrapper_class: 'category-wrapper',
              item_wrapper_class: 'category-item',
              input_html: {class: 'category-selector'},
              boolean_style: :inline,
              collection: Material::CATEGORIES %>
      <br>
      <p>Donner un nom et une description</p>
      <%= f.input :name,
                  label: false,
                  input_html: { class: "col-12 mb-3" },
                  placeholder: "Nom" %>

      <%= f.input :description,
                  label:
                  false,
                  input_html: { class: "col-12 mb-3" },
                  placeholder: "Description" %>
      <br>
      <%= f.input :photo,
                  as: :file,
                  input_html: { class: "d-none", id: 'photo-input' },
                  label_html: { class: 'upload-photo col-12 text-center'},
                  label: 'üì∑ Choisissez une photo' %>
      <%= image_tag "", width: 300, class: "hidden mx-auto mb-2", id: "photo-preview" %>

        <%= f.submit "Valider", class: "mt-2 col-12 btn btn-primary rounded-pill d-block plastroc-button plastroc-light-shadow" %>
        <%= link_to 'Annuler', materials_path, class: "col-12 btn btn-outline-danger rounded-pill d-block mt-3 plastroc-outline-button mr-3" %>
    <% end %>
  </div>
</div>
